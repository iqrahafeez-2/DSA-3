#include <iostream>
using namespace std;

bool isPrimeNumber(int n, int i = 2) {
    if (n <= 0) {
        return false;
    }
    if (i * i > n) {
        return true;
    }
    if (n % i == 0) {
        return false;
    }
    return isPrimeNumber(n, i + 1);
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    bool isPrime = isPrimeNumber(n);

    if (isPrime) {
        cout << n << " is a prime number." << endl;
    }
    else {
        cout << n << " is not a prime number." << endl;
    }

    return 0;
}
